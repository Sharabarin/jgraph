<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.sales.web.screens.customer">
    <data>
        <instance id="customerDc"
                  class="com.company.sales.entity.Customer"
                  view="_local">
            <loader id="customerDl"/>
        </instance>
        <collection id="ordersDc" class="com.company.sales.entity.Order" view="_local">
            <loader id="ordersDl">
                <query><![CDATA[select e from sales_Order e
where e.customer = :customer]]></query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="customerDc">
            <column width="250px">
                <textField id="nameField" property="name"/>
                <textField id="emailField" property="email"/>
                <groupBox>
                    <table id="table" height="100px" width="100%" caption="Orders" dataContainer="ordersDc">
                        <columns>
                            <column id="date"/>
                            <column id="amount"/>
                        </columns>
                    </table>
                </groupBox>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
